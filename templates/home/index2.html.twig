            <a
                    href="{{ path('myApp_home') }}"
                    data-turbo="false"
            >
                Hard refresh
            </a>
        </div>
        <div>
            <a
                    href="{{ path('myApp_home2') }}"
            >
                Append
            </a>
        </div>

        <turbo-stream action="before" target="ppp">
            <template>
                <div class="h1 text-primary">
                    This div will be appended to the element with the DOM ID "messages".
                </div>
            </template>
        </turbo-stream>
    </turbo-frame>
</div>
