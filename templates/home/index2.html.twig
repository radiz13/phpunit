{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 id="ppp">Hello {{ user_name }} ! ðŸ‘‹</h1>

    <turbo-frame id="ma-frame">
        <h1>HelloFrame {{ user_name }} ! ðŸ‘‹</h1>
        <div>
            <a
                    href="{{ path('myApp_home', {nb: 222}) }}"
                    data-turbo-frame="_top"
{#                    data-turbo-action="replace"#}
            >
                Naviguer sans recharger
            </a>
        </div>
        <div>
            <a
                    href="{{ path('myApp_home', {nb: 222}) }}"
            >
                Naviguer dans la frame {{ user_name }}
            </a>
        </div>
